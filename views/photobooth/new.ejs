<% layout('layouts/boilerplate') %>
    <div class="mb-3 col col-12 col-lg-4 mx-auto">
        <div id="new-photo-entry" class="card rounded-4 shadow">
            <div class="card-body">
                <% if (hasImage) { %>
                    <img src="/photosession/preview-image" class="img-fluid rounded border mb-2" alt="Selected photo" />
                <% } else { %>
                        <p class="text-muted">No photo selected yet.</p>
                <% } %>
                <div class="border-bottom mb-4 py-2">
                   <p class="card-text">This is the photo you selected for the centennial celebration.</p> 
                </div>
                
                <form action="/photosession/details" method="POST" class="mt-3">
                    <div class="mb-3 text-start">
                        <label for="memberName" class="form-label">Please add your name:</label>
                        <input type="text" class="form-control" id="memberName" name="memberName" required>
                    </div>
                    <div class="mb-3 text-start">
                        <label for="memberEmail" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="memberEmail" name="memberEmail" required>
                    </div>
                    <div class="mb-4 text-start">
                        <label for="comment" class="form-label">Enter a comment (optional):</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                    </div>
                    <div class="col-12 mb-3 justify-content-end d-flex">
                        <button type="submit" class="btn btn-primary col col-12">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>