<% layout('layouts/boilerplate') %>
    <div class="mb-3 col col-6 mx-auto">
        <div class="card rounded-4 shadow">
            <div class="card-body">
                <% if (selectedImage) { %>
                    <img src="<%= selectedImage %>" class="img-fluid rounded border mb-2" alt="Selected photo" />
                <% } else { %>
                        <p class="text-muted">No photo selected yet.</p>
                <% } %>
                <div class="border-bottom mb-4 py-2">
                   <p class="card-text">This is the photo you selected for the centenal celebration.</p> 
                </div>
                
                <form action="" method="POST" class="mt-3">
                    <div class="mb-3 text-start">
                        <label for="user-name" class="form-label">Please add your name:</label>
                        <input type="text" class="form-control" id="user-name" name="name" required>
                    </div>
                    <div class="mb-3 text-start">
                        <label for="user-email" class="form-label">Email (optional):</label>
                        <input type="email" class="form-control" id="user-email" name="email">
                    </div>
                    <div class="mb-4 text-start">
                        <label for="user-description" class="form-label">Enter a comment (optional):</label>
                        <textarea class="form-control" id="user-description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="col-12 mb-3 justify-content-end d-flex">
                        <button type="submit" class="btn btn-primary col col-12">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>